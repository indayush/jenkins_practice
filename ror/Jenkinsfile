pipeline {

    agent any
    
    parameters{

        string(defaultValue: "demo", description: "Enter Brnach Name", name: "s_Branch_Name")
        string(defaultValue: "https://github.com/indayush/ror-hello-world.git", description: "Git URL of the project", name: "git_url")
        
    }

    stages{
        stage("Clean Up"){
            steps{
                deleteDir()
            }
        }

        stage("Clone Repo"){
            steps{
                sh "git clone ${params.git_url}"
            }
        }

        stage("Checkout Branch"){
            steps{
                dir("ror-hello-world"){
                    sh "git checkout ${params.s_Branch_Name}"
                    sh "git branch"
                    sh '''#!/bin/bash
                        source ~/.rvm/scripts/rvm
                        source ~/.bashrc

                        rvm list
                        rails -v                   
                    '''
                }
            }
        }

        

    }

}
